<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_temperature"
   >


        <ImageView
            android:id="@+id/currentTempImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="weather"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/currentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="current temperature..."
            android:textSize="20pt"
            app:layout_constraintBottom_toBottomOf="@+id/currentTempImg"
            app:layout_constraintEnd_toEndOf="@+id/currentTempImg"
            app:layout_constraintStart_toStartOf="@+id/currentTempImg"
            app:layout_constraintTop_toTopOf="@+id/currentTempImg" />


</androidx.constraintlayout.widget.ConstraintLayout>